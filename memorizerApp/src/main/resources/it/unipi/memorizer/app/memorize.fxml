               </children>
            </VBox>
            <VBox alignment="CENTER" minHeight="24.0">
                <children>
                   <Text fx:id="feedback" strokeType="OUTSIDE" strokeWidth="0.0" />
                </children>
            </VBox>
            <Button fx:id="guessBtn" mnemonicParsing="false" onAction="#guess" style="-fx-background-color: #1e88e5; -fx-text-fill: #ffffff; -fx-font-size: 16px; -fx-background-radius: 5; -fx-cursor: hand;" text="Guess" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</VBox>
