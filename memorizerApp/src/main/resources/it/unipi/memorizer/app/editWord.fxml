<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane style="-fx-background-color: #ffffff; -fx-padding: 20;" maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="Infinity" prefWidth="Infinity" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipi.memorizer.app.EditWordController">
   <children>
        <VBox fx:id="root" alignment="TOP_CENTER">
           <children>
              <VBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
                 <children>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #000000;" text="EDIT WORD">
                       <VBox.margin>
                          <Insets bottom="20.0" />
                       </VBox.margin>
                    </Text>
                    <VBox alignment="CENTER">
                       <children>
                          <Label style="-fx-font-size: 16px; -fx-text-fill: #666666;" text="Word" />
                          <TextField fx:id="word" alignment="TOP_LEFT" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" style="-fx-border-radius: 5; -fx-background-radius: 5;" />
                       </children>
                    </VBox>
                    <VBox alignment="CENTER">
                       <children>
                          <Label style="-fx-font-size: 16px; -fx-text-fill: #666666;" text="Description" />
                          <TextArea fx:id="description" maxWidth="200.0" minHeight="70.0" minWidth="200.0" prefHeight="70.0" prefWidth="200.0" style="-fx-border-radius: 5; -fx-background-radius: 5;" wrapText="true" />
                       </children>
                    </VBox>
                    <VBox alignment="CENTER">
                       <children>
                          <Label style="-fx-font-size: 16px; -fx-text-fill: #666666;" text="Translation" />
                          <TextField fx:id="translation" alignment="TOP_LEFT" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" style="-fx-border-radius: 5; -fx-background-radius: 5;" />
                       </children>
                    </VBox>
                    <Button mnemonicParsing="false" onAction="#editWord" style="-fx-background-color: #1e88e5; -fx-text-fill: #ffffff; -fx-font-size: 16px; -fx-background-radius: 5; -fx-cursor: hand;" text="Edit" />
                 </children>
                 <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                 </padding>
              </VBox>
           </children>
        </VBox>
        <ProgressIndicator fx:id="loader" prefHeight="165.0" prefWidth="218.0">
            <effect>
                <Blend mode="SRC_ATOP" opacity="0.44" />
            </effect>
        </ProgressIndicator>
   </children>
</StackPane>
