<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>


<StackPane xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipi.memorizer.app.HomeController">
   <children>
      <VBox fx:id="root" alignment="CENTER" spacing="30.0" style="-fx-background-color: #ffffff; -fx-border-radius: 10px; -fx-padding: 20px;">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #000000;" text="MEMORIZER">
               <VBox.margin>
                  <Insets bottom="30.0" left="50.0" right="50.0" />
               </VBox.margin>
            </Text>
            <Button maxWidth="140.0" mnemonicParsing="false" onAction="#showWordList" prefWidth="140.0" style="-fx-background-color: #1e88e5; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 5px; -fx-padding: 10px; -fx-cursor: hand;" text="Show Words" />
            <Button maxWidth="140.0" mnemonicParsing="false" onAction="#showAddWords" prefWidth="140.0" style="-fx-background-color: #1e88e5; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 5px; -fx-padding: 10px; -fx-cursor: hand;" text="Add Words" />
            <Button maxWidth="140.0" mnemonicParsing="false" onAction="#showMemorize" prefWidth="140.0" style="-fx-background-color: #1e88e5; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 5px; -fx-padding: 10px; -fx-cursor: hand;" text="Memorize" />
            <Button maxWidth="140.0" mnemonicParsing="false" onAction="#showSettings" prefWidth="140.0" style="-fx-background-color: #1e88e5; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 5px; -fx-padding: 10px; -fx-cursor: hand;" text="Settings" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      <ProgressIndicator fx:id="loader" prefHeight="165.0" prefWidth="218.0">
         <effect>
            <Blend mode="SRC_ATOP" opacity="0.44" />
         </effect>
      </ProgressIndicator>
   </children>
</StackPane>
